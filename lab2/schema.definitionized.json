{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A representation of an online shop",
  "type": "object",
  "required": [ "shop" ],
  "properties": {
    "shop": {
      "$ref": "#/definitions/Shop"
    }
  },
  "definitions": {
    "Shop": {
      "description": "Online shop",
      "type": "object",
      "required": [ "name", "address", "sections" ],
      "properties": {
        "name": {
          "anyOf": [
            {"$ref": "#/definitions/ShopName"},
            {"$ref": "#/definitions/ShopNameAndID"}
          ]
        },
        "address": {
          "oneOf": [
            {"$ref": "#/definitions/StreetAddress"},
            {"$ref": "#/definitions/Coordinates"}
          ]
        },
        "sections": {
          "description": "section array",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Section"
          }
        }
      }
    },
    "Section": {
      "description": "section object",
      "type": "object",
      "required": [ "name", "category" ],
      "properties": {
        "name": { "type": "string" },
        "category": {
          "description": "category of a section",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Category"
          }
        }
      }
    },
    "Category": {
      "description": "category object",
      "type": "object",
      "required": [ "name", "items" ],
      "properties": {
        "name": { "type": "string" },
        "items": {
          "description": "shop item array",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Item"
          }
        }
      }
    },
    "Item": {
      "description": "shop item",
      "type": "object",
      "required": [ "name", "price", "units", "quantity", "restockDates" ],
      "properties": {
        "name": { "type": "string" },
        "price": {
          "$ref": "#/definitions/ItemPrice"
        },
        "units": {
          "$ref": "#/definitions/ItemUnits"                            
        },
        "quantity": { "type": "number" },
        "restockDates": {
          "type": "string",
          "pattern": "^(\\d{4}-\\d{2}-\\d{2} )*\\d{4}-\\d{2}-\\d{2}$"
        }
      }
    },
    "PositiveFloatValue": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "Currency": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string",
          "enum": ["â‚¬", "$"]
        }
      }      
    },
    "Measurement": {
      "type": "object",
      "properties": {
        "measurement": {
          "type": "string",
          "enum": ["l", "g"]
        }
      }
    },
    "ItemPrice": {
      "allOf":[
        {"$ref": "#/definitions/Currency"},
        {"$ref": "#/definitions/PositiveFloatValue"}
      ]
    },
    "ItemUnits": {
      "allOf":[
        {"$ref": "#/definitions/Measurement"},
        {"$ref": "#/definitions/PositiveFloatValue"}
      ]
    },
    "StreetAddress": {
      "type": "string",
      "minLength": 10,
      "maxLength": 50
    },
    "Coordinates": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -85,
          "maximum": 85
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    },
    "ShopName": {
      "type": "string",
      "pattern": "^\\w{5, 15}$"
    },
    "ShopNameAndID": {
      "type": "string",
      "pattern": "^\\w{3}-\\d{4}$"
    }
  }
}